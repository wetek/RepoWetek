                        <control type="image">
                            <posx>0</posx>
                            <posy>735</posy>
                            <width>986</width>
                            <height>90</height>
                            <texture border="3">list/bg_facade_nofocus_top.png</texture>
                        </control>
                        <!-- <control type="label">
                            <visible>!Skin.HasSetting(plexbmc)</visible>
                            <posx>37</posx>
                            <posy>825</posy>
                            <height>66</height>
                            <width>420</width>
