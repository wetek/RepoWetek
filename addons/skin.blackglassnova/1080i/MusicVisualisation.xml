                        </control>
                        <control type="grouplist">
                            <posx>37</posx>
                            <posy>835</posy>
                            <width>1006</width>
                            <height>408</height>
                            <itemgap>20</itemgap>
                            <orientation>horizontal</orientation>
                            <align>left</align>
                            <aligny>center</aligny>
                            <include>CodecsMusicOSD</include>
                        </control>
                    </control>
                </control>
            </control>
            <control type="group">
                <animation effect="slide" start="0,0" end="0,-250" time="0" condition="[Player.Paused |Player.ShowInfo | Window.IsActive(MusicOSD)] + ![Window.IsVisible(AddonSettings) | Window.IsVisible(SelectDialog) | Window.IsVisible(VisualisationPresetList)]">conditional</animation>
                <control type="image">
                    <visible>![Player.Caching | Player.Seeking | player.forwarding | player.rewinding | Player.DisplayAfterSeek] + [Player.Paused] + !Skin.HasSetting(DisablePauseIconOSD)</visible>
                    <posx>810</posx>
                    <posy>390</posy>
                    <width>300</width>
                    <height>300</height>
                    <texture>OSD/pause.png</texture>
                </control>
                <control type="image">
                    <visible>player.rewinding + !Skin.HasSetting(DisablePauseIconOSD)</visible>
                    <posx>810</posx>
                    <posy>390</posy>
                    <width>300</width>
                    <height>300</height>
                    <texture>OSD/rewind.png</texture>
                </control>
                <control type="image">
                    <visible>player.forwarding + !Skin.HasSetting(DisablePauseIconOSD)</visible>
                    <posx>810</posx>
                    <posy>390</posy>
                    <width>300</width>
                    <height>300</height>
                    <texture>OSD/fastforward.png</texture>
                </control>
            </control>
        </control>
    </controls>
</window>
