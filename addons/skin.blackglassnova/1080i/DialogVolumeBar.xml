<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">20</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>32</posx>
        <posy>15</posy>
    </coordinates>
    <include>DialogOpenClose</include>
    <controls>
        <control type="group">
            <animation effect="slide" start="0,0" end="0,34" time="0" condition="window.isactive(DialogSeekBar.xml)">Conditional</animation>
            <control type="image">
                <visible>!player.passthrough</visible>
                <posx>0</posx>
                <posy>0</posy>
                <width>100</width>
                <height>100</height>
                <colordiffuse>WindowTitleColor</colordiffuse>
                <texture>volume/Volume.png</texture>
            </control>
            <control type="image">
                <visible>player.passthrough</visible>
                <posx>0</posx>
                <posy>0</posy>
                <width>100</width>
                <height>100</height>
                <colordiffuse>WindowTitleColor</colordiffuse>
                <texture>volume/VolumeMuted.png</texture>
            </control>
            <control type="group">
                <visible>!player.passthrough</visible>
                <control type="progress" id="20">
                    <posx>-300</posx>
                    <posy>-300</posy>
                    <width>324</width>
                    <height>81</height>
                    <texturebg>-</texturebg>
                    <lefttexture>-</lefttexture>
                    <midtexture>-</midtexture>
                    <righttexture>-</righttexture>
                    <info>Player.Volume</info>
                </control>
                <control type="label">
                    <posx>100</posx>
                    <posy>0</posy>
                    <width>353</width>
                    <height>100</height>
                    <font>WindowTitleFont</font>
                    <textcolor>WindowTitleColor</textcolor>
                    <shadowcolor>-</shadowcolor>
                    <label>$INFO[Control.GetLabel(20)]</label>
                </control>
            </control>
        </control>
    </controls>
</window>
