<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="false">101</defaultcontrol>
    <include>DialogOpenClose</include>
    <controls>
        <control type="group">
            <!-- <visible>![window.IsActive(MusicOSD.xml)]</visible> -->
            <control type="image">
                <posx>-150</posx>
                <posy>-3</posy>
                <texture>common/basichome_upper_gradient.png</texture>
                <width>2220</width>
                <height>740</height>
            </control>
            <control type="image">
                <posx>-150</posx>
                <posy>-3</posy>
                <texture>common/basichome_upper_gradient.png</texture>
                <width>2220</width>
                <height>740</height>
                <colordiffuse>90ffffff</colordiffuse>
            </control>
            <control type="label">
                <visible>Control.IsVisible(110)</visible>
                <posx>510</posx>
                <posy>70</posy>
                <width>900</width>
                <height>30</height>
                <font>InfoTitleFont</font>
                <label>$ADDON[script.cu.lrclyrics 32199]</label>
                <align>center</align>
                <aligny>center</aligny>
                <textcolor>MainColor</textcolor>
            </control>
            <control type="label" id="2">
                <visible>Control.IsVisible(120) + !Control.IsVisible(110)</visible>
                <description>Pick label</description>
                <posx>510</posx>
                <posy>70</posy>
                <width>900</width>
                <height>30</height>
                <font>InfoTitleFont</font>
                <align>center</align>
                <aligny>center</aligny>
                <label>$LOCALIZE[134]</label>
                <textcolor>MainColor</textcolor>
            </control>
            <!-- ** Required ** Do not change <id> or <type> (Smooth scrolling list for lyrics) -->
            <control type="list" id="110">
                <posx>210</posx>
                <posy>150</posy>
                <width>1500</width>
                <height>320</height>
                <onleft>dialog.close(all,true)</onleft>
                <onright>dialog.close(all,true)</onright>
                <onup>110</onup>
                <ondown>110</ondown>
                <scrolltime>200</scrolltime>
                <itemlayout height="40">
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1500</width>
                        <height>40</height>
                        <aligny>center</aligny>
                        <align>center</align>
                        <font>InfoDetailsFont</font>
                        <textcolor>AlternateColor</textcolor>
                        <label>[B]$INFO[ListItem.Label][/B]</label>
                        <scroll>false</scroll>
                    </control>
                </itemlayout>
                <focusedlayout height="40">
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1500</width>
                        <height>40</height>
                        <aligny>center</aligny>
                        <align>center</align>
                        <font>InfoDetailsFont</font>
                        <textcolor>MainColor</textcolor>
                        <label fallback="- -">[B]$INFO[ListItem.Label][/B]</label>
                    </control>
                </focusedlayout>
            </control>
            <!-- ** Required ** Do not change <id> or <type> (Song Chooser if it gets it wrong) -->
            <control type="list" id="120">
                <posx>210</posx>
                <posy>150</posy>
                <width>1500</width>
                <height>320</height>
                <onleft>120</onleft>
                <onright>120</onright>
                <onup>120</onup>
                <ondown>120</ondown>
                <pagecontrol>121</pagecontrol>
                <scrolltime>200</scrolltime>
                <itemlayout height="40">
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1500</width>
                        <height>40</height>
                        <aligny>center</aligny>
                        <align>center</align>
                        <font>InfoDetailsFont</font>
                        <textcolor>AlternateColor</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </itemlayout>
                <focusedlayout height="40">
                    <control type="label">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>1500</width>
                        <height>40</height>
                        <aligny>center</aligny>
                        <align>center</align>
                        <font>InfoDetailsFont</font>
                        <textcolor>MainColor</textcolor>
                        <label>$INFO[ListItem.Label]</label>
                    </control>
                </focusedlayout>
            </control>
            <control type="spincontrol" id="111">
                <visible>false</visible>
                <description>Next page button</description>
                <posx>520</posx>
                <posy>650</posy>
                <subtype>page</subtype>
                <onleft>110</onleft>
                <onright>110</onright>
                <ondown>110</ondown>
                <onup>110</onup>
                <textcolor>AlternateColor</textcolor>
                <showonepage>true</showonepage>
                <visible>Control.IsVisible(110)</visible>
            </control>
            <control type="spincontrol" id="121">
                <visible>false</visible>
                <description>Next page button</description>
                <posx>520</posx>
                <posy>650</posy>
                <subtype>page</subtype>
                <onleft>120</onleft>
                <onright>120</onright>
                <ondown>120</ondown>
                <onup>120</onup>
                <textcolor>AlternateColor</textcolor>
                <showonepage>true</showonepage>
                <visible>Control.IsVisible(120)</visible>
            </control>
            <control type="label" id="200">
                <description>Scraper label</description>
                <visible>false</visible>
            </control>
        </control>
    </controls>
</window>
